
 <div class="chapter-title"><%= "#{@chapter.title}" %></div>

 <div class="chapter-container">
  <form action=<%="/stories/#{@story.id}/public/find_chapter"%> method="get">
    Chapters: <select name="chapter">
      <% @story.chapters.each do |chapter| %>
      <option value=<%="#{chapter.id}"%>><%= "#{chapter.title}" %></option>
      <% end %>
    </select>
    <input type="submit" value="Read!">
  </form>

  <div class="chapter-content">
    <%= @chapter.content %>
  </div>
  <div class="comment-box">

    <h3>Comments:</h3>
    <ul>
    <% @chapter.comments.each do |comment| %>
      <li><a href=<%="/stories/#{@story.id}/chapters/#{@chapter.id}/comments/#{comment.id}"%>><%= comment.content %></a> -- <%= comment.user.name %></li>
    <% end %>
    </ul>

    <form action="<%="/stories/#{@story.id}/chapters/#{@chapter.id}/comments/new"%>">
      <input class="start-story" type="submit" value ="Leave a Comment"</input>
    </form>
  </div>
    <form action="<%="/stories/#{@story.id}/public"%>">
      <input class="start-story" type="submit" value ="Back to Story"</input>
    </form>
  </div>
